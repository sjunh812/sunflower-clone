<resources>

    <style name="Base.Theme.SunflowerClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorOnPrimary">@color/green_500</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/green_700</item>
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="android:colorBackground">@color/green_500</item>
    </style>

    <style name="Theme.SunflowerClone" parent="Base.Theme.SunflowerClone" />

    <style name="Theme.SunflowerClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.MaterialComponents.SmallComponent
        </item>
    </style>

    <style name="Theme.SunflowerClone.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

</resources>